{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNEXT",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@actions/*": [
        "./actions/*"
      ],
      "@interfaces/*": [
        "./interfaces/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@pages/*": [
        "./pages/*"
      ],
      "@public/*": [
        "./public/*"
      ],
      "@store": [
        "./store"
      ],
      "@styles/*": [
        "./styles/*"
      ],
      "@stylemodules/*": [
        "./stylemodules/*"
      ],
      "@reducers/*": [
        "./reducers/*"
      ],
      "@slices/*": [
        "./slices/*"
      ],
      "@thememodule/*": [
        "./themes/*"
      ],
      "~/*": [
        "./*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
